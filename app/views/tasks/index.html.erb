
<div class="container text-center">
  <div class="row">
    <div class="col-sx-12">

    </div>
  </div>
  <div class="row">
    <% @tasks.each do |task| %>
      <div class="col-sx-12 col-md-4 wrapper-postit">
        <h3><%= task.id %> | <%= link_to task.name, task_path(task) %> </h3>
        <p><%= task.description %> </p>
        <%= link_to "Delete this task", task_path(task), :class => "btn btn-danger", method: :delete %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="padded">
        <%= link_to "Add a new task", new_task_path, :class => "btn btn-success" %>
      </div>
    </div>
  </div>
</div>


